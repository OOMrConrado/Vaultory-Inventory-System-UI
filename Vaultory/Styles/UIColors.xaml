<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <Color x:Key="primaryBackColor1">#1C2E4A</Color>
    <!-- fondo base -->
    <Color x:Key="primaryBackColor2">#0A0A2A</Color>
    <!-- variante -->
    <Color x:Key="secondaryBackColor1">#12152B</Color>
    <!-- paneles -->
    <Color x:Key="secondaryBackColor2">#1C1F38</Color>

    <!-- Window Border Colors -->
    <Color x:Key="winBorderColor1">#36454F</Color>
    <!-- charcoal gray -->
    <Color x:Key="winBorderColor2">#5E6E8C</Color>
    <!-- gris azulado -->
    <Color x:Key="winBorderColor3">#002147</Color>
    <!-- azul tinta -->

    <!-- Color Palette (acentos y detalles) -->
    <SolidColorBrush x:Key="color1" Color="#E0E0E0"/>
    <!-- gris claro con azul -->
    <SolidColorBrush x:Key="color2" Color="#BFBFBF"/>
    <!-- gris profundo -->
    <SolidColorBrush x:Key="color3" Color="#BFBFBF"/>
    <!-- azul suave -->
    <SolidColorBrush x:Key="color4" Color="#BFBFBF"/>
    <!-- acento claro -->
    <SolidColorBrush x:Key="color5" Color="#BFBFBF"/>
    <SolidColorBrush x:Key="color6" Color="#BFBFBF"/>
    <SolidColorBrush x:Key="color7" Color="#BFBFBF"/>
    <!-- casi blanco -->
    <SolidColorBrush x:Key="color8" Color="#353A3E"/>
    <SolidColorBrush x:Key="color9" Color="#8DA0BF"/>
    <SolidColorBrush x:Key="color10" Color="#D3D3D3"/>
    <!-- gris claro del login -->

    <!-- Font Colors -->
    <SolidColorBrush x:Key="titleColor1" Color="#F0F4F9"/>
    <!-- títulos -->
    <SolidColorBrush x:Key="titleColor2" Color="#D3D6E0"/>
    <SolidColorBrush x:Key="titleColor3" Color="#A5A9BD"/>
    <SolidColorBrush x:Key="plainTextColor1" Color="#9CA2BB"/>
    <SolidColorBrush x:Key="plainTextColor2" Color="#8187A3"/>
    <SolidColorBrush x:Key="plainTextColor3" Color="#6E728A"/>

    <!-- Panel Colors -->
    <SolidColorBrush x:Key="panelColor" Color="#1A1F33"/>
    <SolidColorBrush x:Key="panelOverColor" Color="#232841"/>
    <SolidColorBrush x:Key="panelActiveColor" Color="#2C3250"/>

    <!-- Puede continuar con colores de botones, textbox, etc. -->

</ResourceDictionary>
